<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tagwire.notspad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.knjin.notspad.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/notepad_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.knjin.notspad.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.knjin.notspad.activity.NotepadAddActivity"
            android:label="@string/title_activity_notepad_add"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.knjin.notspad.activity.NotepadDetailActivity"
            android:label="@string/title_activity_notepad_detail"
            android:parentActivityName="com.knjin.notspad.activity.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.knjin.notspad.activity.MainActivity" />
        </activity>
        <activity android:name="com.knjin.notspad.activity.ContactActivity" />
        <activity android:name="com.knjin.notspad.activity.BaseActivity"></activity>\

        <receiver android:name="com.knjin.notspad.service.MyBoradcast">
            <intent-filter>
                <action android:name="com.facedetect.pickup"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>